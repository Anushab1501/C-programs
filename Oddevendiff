#include<stdio.h>
main()
{
int n,i=1,evensum,oddsum,differ;
evensum=0,oddsum=0;
printf("enter n value:");
scanf("%d",&n);
while(i<=n)
{
if(i%2==0){
evensum=evensum+i;
}
else
{
oddsum=oddsum+i;
}

i++;
differ=oddsum-evensum;
}
printf("evensum=%d",evensum);
printf("oddsum=%d",oddsum);
printf("Difference=%d",differ);
}
